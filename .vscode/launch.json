    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
        ,
        {
            "name": "Debug data_ordering.cli (module)",
            "type": "debugpy",
            "request": "launch",
            "module": "data_ordering.cli",
            "args": [
                "--source",
                "C:\\test_source\\LH",
                "--output",
                "C:\\clean_dataset",
                "--step-by-step",
                "--use-llm"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        }
    ]
}